<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="Theme.Scout" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
	    <item name="android:buttonStyle">@style/ButtonScout</item>
	    <item name="android:imageButtonStyle">@style/ImageButtonScout</item>
	    <item name="android:dropDownSpinnerStyle">@style/SpinnerScout</item>
    </style>
    
	<style name="ButtonScout" parent="android:Widget.Holo.Light.Button">
		<item name="android:background">@drawable/btn_default_holo_light</item>
	</style>
	
	<style name="ImageButtonScout" parent="android:Widget.Holo.Light.ImageButton">
		<item name="android:background">@drawable/btn_default_holo_light</item>
	</style>
	
	<style name="SpinnerScout" parent="android:Widget.Holo.Light.Spinner">
		<item name="android:background">@drawable/spinner_background_holo_light</item>
		<item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
	</style>

</resources>
